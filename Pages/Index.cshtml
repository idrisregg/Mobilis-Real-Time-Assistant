@page
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #00B259;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }
        
        .chat-container {
            background: white;
            border-radius: 8px;
            width: 500px;
            height: 600px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
        }
        
        h1 {
            color: white;
            background: #0a4d2e;
            text-align: center;
            margin: 0;
            padding: 15px;
            font-size: 18px;
            border-radius: 8px 8px 0 0;
        }

    
        #messagesList {
            list-style: none;
            padding: 15px;
            margin: 0;
            flex: 1;
            overflow-y: auto;
            background: #f5f5f5;
        }
        
        #messagesList li {
            padding: 10px 12px;
            margin-bottom: 10px;
            background: white;
            border-radius: 8px;
            max-width: 80%;
            word-wrap: break-word;
        }
        
        .user-msg {
            margin-left: auto;
            background: #e8f5e9;
            text-align: right;
        }
        
        .assistant-msg {
            margin-right: auto;
            color:black;
            background: white;
            border: 1px solid #e0e0e0;
        }
        
        .input-area {
            padding: 15px;
            background: white;
            border-top: 1px solid #ddd;
            border-radius: 0 0 8px 8px;
        }
        
        .input-row {
            display: flex;
            gap: 8px;
            margin-bottom: 8px;
        }
        
        input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }
        
        button {
            padding: 10px 20px;
            background: #0a4d2e;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }
        
        button:hover:not(:disabled) {
            background: #166d47;
        }
        
        button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <h1>Mobilis Assistant</h1>
        
        <ul id="messagesList"></ul>
        
        <div class="input-area">
            <div class="input-row">
                <input type="text" id="messageInput" placeholder="إسألني" />
                <button id="sendButton" disabled>بعث</button>
            </div>
        </div>
    </div>
    
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
</body>
</html>